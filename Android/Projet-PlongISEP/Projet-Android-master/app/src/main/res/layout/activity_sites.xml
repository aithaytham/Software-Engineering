<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SitesActivity">

    <TextView
            android:text="Nom du site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Localisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="58dp" android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"/>

    <TextView
            android:text="Description"
            android:layout_width="398dp"
            android:layout_height="100dp"
            android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.481"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.461"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="414dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/simple_recyclerview2"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.97"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="466dp"/>
    <EditText
            android:layout_width="227dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:hint="Entrer un nouveau commentaire"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/simple_recyclerview2" android:layout_marginBottom="78dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Ajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addcomment2"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ratingBar4" app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/textView11"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar5"
            app:layout_constraintStart_toStartOf="@+id/ratingBar4" app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginBottom="194dp" app:layout_constraintBottom_toTopOf="@+id/simple_recyclerview2"/>
    <TextView
            android:text="Note de la faune du site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView10" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintBottom_toTopOf="@+id/ratingBar4"/>
    <TextView
            android:text="Note de la flore du site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView11" app:layout_constraintTop_toBottomOf="@+id/ratingBar4"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/ratingBar5"/>
</androidx.constraintlayout.widget.ConstraintLayout>